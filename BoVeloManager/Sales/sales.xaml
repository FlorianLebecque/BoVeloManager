<Page x:Class="BoVeloManager.Sales.Sales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoVeloManager.Sales"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="sales" Background="White">


    <Border Padding="10">
        <StackPanel>
            <Grid Height="429">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Bike Sales" FontWeight="Bold" Margin="0 0 0 10" FontSize="15"/>

                <!-- Button -->
                <StackPanel  Grid.Row="1" Orientation="Horizontal">
                    <Button x:Name="bt_addUser" Width="50" Height="25" HorizontalAlignment="Left" Margin="5 0" Content="Add" Click="bt_addSale_Click"/>
                </StackPanel>

                <!-- Data Grid Sales  -->
                <DataGrid x:Name="dg_salesList" Margin="0,0,0,0" Grid.Row="2" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" FrozenColumnCount="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn CanUserResize="False"  Header="Id" Binding="{Binding id}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Date" Binding="{Binding date}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Client" Binding="{Binding Client}" IsReadOnly="True" />
                        <DataGridTemplateColumn Header="Details">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnView" Margin="1" Click="bt_showDescription_Click" Content="Details"  />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>
    </Border>
</Page>
