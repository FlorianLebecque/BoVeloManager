<Window x:Class="BoVeloManager.Sales.addSales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoVeloManager.Sales"
        mc:Ignorable="d"
        Title="Add sale" Height="400" Width="600" ResizeMode="NoResize">
    <Grid>
        <Label Content="Frame :" HorizontalAlignment="Left" Margin="17,60,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Wheels :" HorizontalAlignment="Left" Margin="17,91,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Brakes :" HorizontalAlignment="Left" Margin="17,122,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Saddle  :" HorizontalAlignment="Left" Margin="17,153,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Handlebar :" HorizontalAlignment="Left" Margin="17,184,0,0" VerticalAlignment="Top" Width="82"/>

        <DockPanel>
            <!-- Title -->           
            <TextBlock Margin="0 0 0 10" Text="New Sale" FontSize="22" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" DockPanel.Dock="Top" Foreground="#FF444444"/>
            
            <!-- Sale --> 
            <StackPanel>
                <Grid>
                    
                </Grid>
                
            </StackPanel>
            
            <!-- Button -->
            <Grid Margin="5 0 5 0" Height="30" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <Button Content="Add new sale" HorizontalAlignment="Left" Margin="282,0,0,0" VerticalAlignment="Top" Width="92" />
                <Button Content="Cancel" HorizontalAlignment="Left" Margin="190,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
