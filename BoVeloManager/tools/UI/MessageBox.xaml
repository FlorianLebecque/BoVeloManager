<Window x:Class="BoVeloManager.tools.UI.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoVeloManager.tools.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MESSAGE_TITLE" Height="136" Width="368" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>


        <TextBlock DockPanel.Dock="Top" x:Name="tb_message" Margin="10,10,10,0" TextAlignment="Justify" Height="87" VerticalAlignment="Top">TEXT_TO_DISPLAY</TextBlock>


        <Button VerticalAlignment="Bottom" Visibility="Hidden" Name="bt_cancel" Margin="0,0,95,10" HorizontalAlignment="Right" Width="80" Click="bt_cancel_Click">
            <materialDesign:PackIcon Kind="Cancel"/>
        </Button>

        <Button VerticalAlignment="Bottom" Margin="0,0,10,10" Click="Button_Click" HorizontalAlignment="Right" Width="80">
            <materialDesign:PackIcon Kind="Done"/>
        </Button>


    </Grid>
</Window>
